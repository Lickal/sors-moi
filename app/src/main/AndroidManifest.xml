<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.darcel.sors_moi">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_iconefull"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Parties_Activity"
            android:label="@string/title_activity_parties_"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.darcel.sors_moi.MainActivity" />
        </activity>
        <activity
            android:name=".Details_Activity"
            android:label="@string/title_activity_parties_"
            android:parentActivityName=".Parties_Activity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.darcel.sors_moi.MainActivity" />
        </activity>
        <activity
            android:name=".MentionsLegalesActivity"
            android:label="@string/title_activity_parties_"
            android:parentActivityName=".Parties_Activity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.darcel.sors_moi.MainActivity" />
        </activity>
        <activity
            android:name=".ContactActivity"
            android:label="@string/title_activity_parties_"
            android:parentActivityName=".Parties_Activity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.darcel.sors_moi.MainActivity" />
        </activity>
    </application>

</manifest>
